    <!-- Beginning of left-hand side panel -->
    <Panel
      halign="center"
      valign="center"
      horizontal="-25%"
      vertical="0"
      width="40%"
      height="75%"
      id="options_menu_left_panel">
      <Button
        id="Display"
        aboveID="GameSettings"
        belowID="Controls"
        defaultSelected="true"
        halign="center"
        valign="top"
        horizontal="0"
        vertical="5%"
        width="80%"
        height="20%"
